            android:layout_marginBottom="25dp"
            app:autoPlay="true"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            app:autoPlayDelay="3000"
            app:showTopShadow="false"
            app:showBottomShadow="false"
            app:showNavigationButtons="false" />

